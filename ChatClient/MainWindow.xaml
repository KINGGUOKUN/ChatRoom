<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  Grid.Row="0">
            <TextBlock>姓名</TextBlock>
            <TextBox Text="{Binding Name}" Height="30"></TextBox>
            <TextBlock Margin="10">内容:</TextBlock>
            <TextBox Text="{Binding Content}" Height="30" Width="300"></TextBox>
            <Button Command="{Binding Append}" Width="30"/>
        </StackPanel>
        <ListView Grid.Row="2" ItemsSource="{Binding Contents}"/>
    </Grid>
</Window>
